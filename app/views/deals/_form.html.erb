
<%= simple_form_for(@deal) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :company %>
    <%= f.input :commission %>
    <%= f.input :time_of_close %>
    <%= f.association :user %>
    <%= f.association :todo %>
    <%= f.association :company %>
    <%= f.association :dealable %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
