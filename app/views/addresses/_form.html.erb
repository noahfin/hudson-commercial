
<%= simple_form_for(@address) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :street1 %>
    <%= f.input :street2 %>
    <%= f.input :city %>
    <%= f.input :state %>
    <%= f.input :zipcode %>
    <%= f.input :country %>
    <%= f.input :full_address %>
    <%= f.input :address_type %>
    <%= f.association :addressable %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
