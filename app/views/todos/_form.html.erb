
<%= simple_form_for(@todo) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :created_by %>
    <%= f.input :finshed %>
    <%= f.input :user_id %>
    <%= f.input :todo_type %>
    <%= f.association :todoable %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
